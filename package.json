{
  "private": true,
  "scripts": {
    "test": "npm -s run lint",
    "lint": "npm -s run lint:prettier && npm -s run lint:i18n",
    "lint:prettier": "prettier . --check",
    "lint:i18n": "banana-checker --requireLowerCase=0 i18n/",
    "fix": "prettier . --write"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^3.4.1",
    "grunt-banana-checker": "0.13.0",
    "prettier": "^3.3.3"
  }
}
